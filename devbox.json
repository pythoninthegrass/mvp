{
  "packages": [
    "python@3.11.6",
    "python311Packages.pip@latest",
    "poetry@latest",
    "ansible-lint@latest",
    "ansible@latest",
    "asdf-vm@latest",
    "docker@latest",
    "gh@latest",
    "git@latest",
    "gnumake@latest",
    "go-task@latest",
    "minikube@latest",
    "nodejs@21.4.0",
    "openssl@latest",
    "tilt@latest"
  ],
  "env": {
    "VENV_DIR": ".venv"
  },
  "shell": {
    "init_hook": [
      ". $VENV_DIR/bin/activate",
      "poetry install --no-root"
    ],
    "scripts": {
      "test":  "poetry run pytest"
    }
  }
}
